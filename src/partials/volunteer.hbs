{{#if resume.volunteer.length}}
<div class="container volunteer-container">
    {{> title value="Volunteer"}}

    {{#each resume.volunteer}}
    <section class="item">
        {{#if position}}
        {{> section-header name=this.position showWebsite=true}}
        {{/if}}
        
        {{#if organization}}
        <h5>{{organization}}</h5>
        {{/if}}

        {{#if summary}}
        <p class="summary">{{summary}}</p>
        {{/if}}

        {{#if highlights.length}}
        <ul>
            {{#each highlights}}
            <li>{{.}}</li>
            {{/each}}
        </ul>
        {{/if}}
    </section>
    {{/each}}
</div>
{{/if}}
